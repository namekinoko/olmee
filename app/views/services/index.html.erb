<% provide( :title, "サービス" )%>
  <%= stylesheet_link_tag 'services/index', :media => "all" %>

<main>
  <div class="main-wrapper">
    <div class="search-prefecture">
      <h1>旅行する都道府県を教えてください</h1>
      <%= form_with url: '', method: :get, class: 'search', local: true do |f| %>
        <%= f.text_field :keyword, class: 'search-keyword', placeholder: ' 都道府県を入力'%>
        <%= f.button :type => 'submit', class: "btn" do %>
        <i class='fa fa-search'></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="newest-wrapper">
    <h1></h1>
    <div class="newest-posts">ここに最新の投稿</div>
    <% @groups.each do |group| %>
    <p>タイトル</p>
      <% if user_joined_group?( current_user, group )%>
      <span><%= group.user_id %></span>
      <%= link_to group.number, edit_group_path( group.id )%>
      <%= group.users.count %>
      <p>参加済み</p>
      <% else %>
      <%= link_to '参加', join_group_path(group) %>
      <% end %>
    <% end %>
  </div>
</main>