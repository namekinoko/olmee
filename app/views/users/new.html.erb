<% content_for :scss do %>
    <%= stylesheet_link_tag 'users/new' %>
<% end %>

<div class="users-header">旅とも</div>
<div id="new-body">
    <div class="new">
      <div class="explanation">
        <h1>新規会員登録（無料）</h1>
        <p>全ての項目が<span>必須</span>です。</p>
      </div>
      <div class="form-wrapper">
        <%= form_with(model: @user, local: true, id: 'form') do |f| %>
        <%= render 'shared/error_messages'%>

            <%= f.label :name, "名前"%>
            <%= f.text_field :name, class: 'form-control', placeholder: "例　山田　太郎"%>

            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email %>

            <%= f.label :nickname, "ニックネーム" %>
            <%= f.text_field :nickname %>

            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, class: 'form-control', placeholder: "半角英数字6文字以上"%>

            <%= f.label :password_confirmation, "確認" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>

            <%= f.submit "新規登録", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div>
        <p><a href="#">アカウントをお持ちの方はこちら</a></p>
      </div>
    </div>
    
</div>