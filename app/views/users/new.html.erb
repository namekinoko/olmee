<% provide( :title, "新規会員登録" )%>
<%= stylesheet_link_tag 'users/new', :media => "all" %>

<div class="new">
    <div class="explanation">
      <h1>新規会員登録（無料）</h1>
      <p>全ての項目が<span>必須</span>です。</p>
    </div>
    <div class="form-wrapper">
      <%= form_with(model: @user, local: true, id: 'form') do |f| %>
      <%= render 'shared/error_messages', model: @user %>
        <table class="new-table">
          <tr>
            <th class="new-items">
              <%= f.label :name do %>
              名前 <span>必須</span>
              <% end %>
            </th>
            <td class="new-body">
              <%= f.text_field :name, class: 'form-control', placeholder: "田中 太郎"%>
            </td>
          </tr>

          <tr>
            <th class="new-items">
              <%= f.label :email do %>
              メールアドレス <span>必須</span>
              <% end %>
            </th>
            <td class="new-body">
              <%= f.email_field :email, placeholder: "olmee@example.com"%>
            </td>
          </tr>

          <tr>
            <th class="new-items">
              <%= f.label :nickname do %>
              ニックネーム <span>必須</span>
              <% end %>
            </th>
            <td class="new-body">
              <%= f.text_field :nickname, placeholder: "オルミー"%>
            </td>
          </tr>

          <tr>
            <th class="new-items">
              <%= f.label :password do %>
              パスワード <span>必須</span>
              <% end %>
            </th>
            <td class="new-body">
              <%= f.password_field :password, class: 'form-control', placeholder: "パスワード"%>
            </td>
          </tr>

          <tr>
            <th class="new-items">
              <%= f.label :password_confirmation do %>
              パスワード確認 <span>必須</span>
              <% end %>
            </th>
            <td class="new-body">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "パスワード確認"%>
            </td>
          </tr>

        </table>
        <div class="new-btn">
          <%= f.submit "新規登録", class: "btn" %>
        </div>
      <% end %>
    </div>
    <div class="has-account">
        <p><%= link_to "既にアカウントをお持ちの方はこちら", login_path %></a></p>
    </div>
</div>