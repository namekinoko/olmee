<% content_for :scss do %>
    <%= stylesheet_link_tag 'users/new' %>
<% end %>

<div class="users-header"><a href="/">旅とも</a></div>
<div class="new">
  <div class="explanation">
    <h1>新規会員登録（無料）</h1>
    <p>全ての項目が<span>必須</span>です。</p>
  </div>
  <div class="form">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= f.label :name, "名前"%>
      <%= f.text_field :name , placeholder: "例　山田　太郎"%>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password , placeholder: "半角英数字6文字以上"%>

      <%= f.label :password_confirmation, "確認" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "新規登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>