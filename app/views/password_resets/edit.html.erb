<% provide(:title, 'パスワード再設定') %>
<%= stylesheet_link_tag "password_resets/edit", :media => "all" %>
<h1>パスワード再設定</h1>

<div class="re-password">
    <%= form_with( model: @user, url: password_reset_path( params[:id] ), local: true ) do |f| %>
       <%= render 'shared/error_messages', model: @user %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password , "新しいパスワード"%>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation , "確認"%>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "パスワード変更", class: "btn" %>
    <% end %>
</div>